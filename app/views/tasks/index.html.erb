<p style="color: green"></p>

<% content_for :title, "Tasks" %>


<div class="btn-group btn-group-sm right">
  <%= link_to(tasks_path(status: "all")) do %>
    <div class="btn btn-light position-relative filter">
      <i class="fa-solid fa-filter-circle-xmark"></i> All
    </div>
  <% end %>
  <%= link_to(tasks_path) do %>
    <div class="btn btn-light position-relative filter">
      <i class="fa-solid fa-filter"></i> To Do
      <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
        <%= @todo %>
      </span>
    </div>
  <% end %>
  <%= link_to(tasks_path(status: "completed")) do %>
    <div class="btn btn-light position-relative filter">
      <i class="fa-solid fa-filter"></i> Completed
      <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
        <%= @completed %>
      </span>
    </div>
  <% end %>

</div>
<h1>Tasks</h1>
<div id="tasks" class="row">
  <div class="col-3">
    <%= link_to(new_task_path) do %>
      <div class="btn btn-primary position-relative">
        <i class="fa-solid fa-plus"></i> New Task
      </div>
    <% end %>
  </div>
  <div class="col-6">
    <%= paginate @tasks %>
  </div>
  
  <div class="row">
    <div class="col-12">
      <% if notice %>
        <div class="alert alert-success" role="alert">
          <%= notice %>
        </div>
      <% end %>
    </div>
  </div>


  <div class="row">
    <% @tasks.each do |task| %>
      <%= render task %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-6 offset-md-3">
    <%= paginate @tasks %>
  </div>
</div>

